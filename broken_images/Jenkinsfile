pipeline {
    agent any
    
    environment {
        PYTHON_PATH = 'python'
        CHROME_DRIVER_PATH = 'C:\\WebDriver\\chromedriver.exe'
    }
    
    stages {
        stage('Setup') {
            steps {
                script {
                    // Install Python dependencies
                    bat 'pip install selenium==4.29.0 requests==2.31.0'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    // Run the Selenium test
                    bat 'python broken_images.py'
                }
            }
        }
    }
    
    post {
        always {
            // Clean up workspace
            cleanWs()
        }
    }
} 