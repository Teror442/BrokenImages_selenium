pipeline {
    agent any
    
    stages {
        stage('Setup') {
            steps {
                bat '''
                    echo %PATH%
                    where python
                    python --version
                    pip --version
                    pip install selenium requests
                '''
            }
        }
        
        stage('Test') {
            steps {
                bat 'python -m unittest broken_images.py'
            }
        }
    }
    
    post {
        always {
            bat 'taskkill /F /IM chromedriver.exe /T'
        }
    }
} 