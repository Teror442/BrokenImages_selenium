pipeline {
    agent any
    
    stages {
        stage('Setup') {
            steps {
                sh 'python -m pip install selenium==4.29.0 requests==2.31.0'
            }
        }
        
        stage('Test') {
            steps {
                sh 'python -m unittest broken_images.py -v'
            }
        }
    }
    
    post {
        always {
            sh 'pkill -f chromedriver || true'
        }
    }
} 