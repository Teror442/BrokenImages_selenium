pipeline {
    agent any
    
    stages {
        stage('Setup') {
            steps {
                bat 'python -m pip install selenium==4.29.0 requests==2.31.0'
            }
        }
        
        stage('Test') {
            steps {
                bat 'python -m unittest broken_images.py -v'
            }
        }
    }
    
    post {
        always {
            bat 'taskkill /F /IM chromedriver.exe /T'
        }
    }
} 